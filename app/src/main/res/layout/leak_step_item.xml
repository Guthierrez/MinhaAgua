<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/leakStepImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_done"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp" />

    <TextView
        android:id="@+id/leakStepIndex"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:text="1."
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@id/leakStepImage"
        android:layout_toEndOf="@id/leakStepImage" />

    <TextView
        android:id="@+id/leakStepDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Descrição"
        android:layout_toRightOf="@id/leakStepIndex"
        android:layout_toEndOf="@id/leakStepIndex" />

    <TextView
        android:id="@+id/leakStepNote"
        android:textSize="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Falta de informações para resolução."
        android:layout_below="@id/leakStepImage"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp" />
</RelativeLayout>