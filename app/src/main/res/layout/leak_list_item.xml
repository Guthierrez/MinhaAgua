<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="20dp"
    android:id="@+id/leakLitemItem">

    <ImageView
        android:id="@+id/leakItemImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_done"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/leakItemDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descrição"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/leakItemImage"/>

    <TextView
        android:id="@+id/leakItemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Prioridade"
        android:layout_toRightOf="@id/leakItemImage"
        android:layout_below="@id/leakItemDescription"/>

    <View
        android:id="@+id/taskItemLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/leakItemDate"
        android:background="#ececec"/>
</RelativeLayout>